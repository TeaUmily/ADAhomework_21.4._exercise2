<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/edittext_first_number"
        android:layout_marginTop="70dp"
        style="@style/numberTextBox"
        android:hint="@string/number1" />

    <EditText
        android:id="@+id/edittext_second_number"
        style="@style/numberTextBox"
        android:layout_marginTop="135dp"
        android:hint="@string/number2" />
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="15dp"
    android:layout_below="@+id/edittext_second_number">

    <Button
        android:id="@+id/addition_button"
        style="@style/buttonLook"
        android:text="+" />

    <Button
        android:id="@+id/subtraction_button"
        style="@style/buttonLook"
        android:text="-" />

    <Button
        android:id="@+id/multiplication_button"
        style="@style/buttonLook"
        android:text="*" />

    <Button
        android:id="@+id/division_button"
        style="@style/buttonLook"
        android:text="/" />

</LinearLayout>

   <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"

        android:layout_height="80dp"
        android:layout_marginTop="300dp"
        android:background="@color/basic_black"
        android:gravity="center"
        android:text="@string/textview_result"
        android:textColor="@color/basic_white"
        android:textSize="@dimen/textview_result_size"
         />

</RelativeLayout>